{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",                   // 최신 JavaScript로 변환
    "module": "es6",                   // 모듈 시스템 (브라우저용)
    "strict": true,                    // 타입 검사 엄격하게
    "esModuleInterop": true,          // ES6 import/export 호환성
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",               // 컴파일 결과 나올 위치
    "rootDir": "./src",                // .ts 파일들이 있는 곳
  },
  "include": ["src"]                  // 컴파일할 파일들
}
